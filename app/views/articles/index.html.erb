<h1>All Articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Edit', edit_article_path(article) %> |

				<%= link_to 'Delete', article_path(article), method: :delete, 
				data: { confirm: 'Are you sure you want to delete?' } %></td>
		</tr>
	<% end %>

</table>

<br />
<%= link_to 'Add Another Article', new_article_path %>